version: '3.7'

services:

  vault-agent-demo:
    image: hashicorp/vault-enterprise:latest
    restart: always
    ports:
      - "18200:8200"
    volumes:
      - ./vault-agent:/vault-agent:rw
      - ./nginx:/usr/share/nginx/html:rw
    environment:
      VAULT_ADDR: "http://127.0.0.1:8200"
      
    container_name: vault-agent-demo
    entrypoint: "vault agent -log-level debug -config=/vault-agent/agent-config.hcl"
  
  vault_dev:
    image: hashicorp/vault:latest
    restart: always
    volumes:
      - /vault/data
      - /etc/vault/logs
    ports:
      - "8200:8200/tcp"
    environment:
      VAULT_DEV_ROOT_TOKEN_ID: 'root'
      VAULT_DEV_LISTEN_ADDRESS: '127.0.0.1:8100'
    cap_add:
      - IPC_LOCK
    container_name: vault_dev1
    entrypoint: "vault server -dev"
